generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider  = "postgresql"
  url       = env("DATABASE_URL")
  directUrl = env("DIRECT_URL")
}

model account {
  account_id           Int                    @id @default(autoincrement())
  first_name           String?                @db.VarChar(100)
  last_name            String?                @db.VarChar(100)
  phone_number         String?                @db.VarChar(20)
  user_id_line         String?                @db.VarChar(100)
  username             String?                @unique @db.VarChar(100)
  password             String?                @db.VarChar(255)
  position             String?                @db.VarChar(100)
  agriculture_info     agriculture_info[]
  device_registrations device_registrations[]
  farms                farms[]
  logs                 logs[]
}

model agriculture_info {
  agriculture_id   Int            @id @default(autoincrement())
  account_id       Int
  plot_name        String?        @db.VarChar(100)
  area             Float?
  rice_variety     String?        @db.VarChar(100)
  planting_method  String?        @db.VarChar(100)
  soil_type        String?        @db.VarChar(100)
  water_management String?        @db.VarChar(100)
  is_baac_member   Boolean?
  address          String?
  sub_district_id  Int?
  farm_plots_id    Int?
  account          account        @relation(fields: [account_id], references: [account_id], onDelete: NoAction, onUpdate: NoAction)
  farm_plots       farm_plots?    @relation(fields: [farm_plots_id], references: [farm_plots_id], onUpdate: NoAction)
  sub_districts    sub_districts? @relation(fields: [sub_district_id], references: [sub_district_id], onDelete: NoAction, onUpdate: NoAction)

  @@index([farm_plots_id], map: "idx_agri_plot")
}

model device_registrations {
  device_registrations_id Int                    @id @default(autoincrement())
  device_id               Int
  user_id                 Int
  status                  String?                @db.VarChar(50)
  registered_at           DateTime?              @default(now()) @db.Timestamp(6)
  farm_plot_id            Int?
  devices                 devices                @relation(fields: [device_id], references: [device_id], onDelete: NoAction, onUpdate: NoAction)
  account                 account                @relation(fields: [user_id], references: [account_id], onDelete: NoAction, onUpdate: NoAction)
  farm_plots              farm_plots?            @relation(fields: [farm_plot_id], references: [farm_plots_id], onUpdate: NoAction, map: "fk_device_registrations_farm_plot")
  sensor_readings         sensor_readings[]
  user_device_settings    user_device_settings[]

  @@index([farm_plot_id], map: "idx_device_registrations_plot")
}

model devices {
  device_id            Int                    @id @default(autoincrement())
  device_code          String?                @unique @db.VarChar(100)
  created_at           DateTime?              @default(now()) @db.Timestamp(6)
  status               String?                @db.VarChar(50)
  device_registrations device_registrations[]
}

model districts {
  district_id   Int             @id @default(autoincrement())
  province_id   Int
  name_th       String          @db.VarChar(255)
  provinces     provinces       @relation(fields: [province_id], references: [province_id], onDelete: NoAction, onUpdate: NoAction)
  sub_districts sub_districts[]
}

model logs {
  logs_id    Int       @id @default(autoincrement())
  ip_address String?   @db.VarChar(45)
  user_id    Int?
  action     String?
  created_at DateTime? @default(now()) @db.Timestamp(6)
  account    account?  @relation(fields: [user_id], references: [account_id], onDelete: NoAction, onUpdate: NoAction)
}

model provinces {
  province_id Int         @id @default(autoincrement())
  name_th     String      @db.VarChar(255)
  districts   districts[]
}

model sensor_readings {
  sensor_readings_id      Int                  @id @default(autoincrement())
  device_registrations_id Int
  sensor_type_id          Int
  value                   Float?
  unit                    String?              @db.VarChar(50)
  measured_at             DateTime?            @default(now()) @db.Timestamp(6)
  device_registrations    device_registrations @relation(fields: [device_registrations_id], references: [device_registrations_id], onDelete: NoAction, onUpdate: NoAction)
  sensor_type             sensor_type          @relation(fields: [sensor_type_id], references: [sensor_type_id], onDelete: NoAction, onUpdate: NoAction)
}

model sensor_type {
  sensor_type_id  Int               @id @default(autoincrement())
  name            String            @db.VarChar(100)
  description     String?
  sensor_readings sensor_readings[]
}

model sub_districts {
  sub_district_id  Int                @id @default(autoincrement())
  district_id      Int
  name_th          String             @db.VarChar(255)
  zip_code         String?            @db.VarChar(10)
  agriculture_info agriculture_info[]
  districts        districts          @relation(fields: [district_id], references: [district_id], onDelete: NoAction, onUpdate: NoAction)
}

model user_device_settings {
  user_settings_id        Int                  @id @default(autoincrement())
  data_send_interval_days Int?
  device_active           Boolean?
  notifications           Boolean?
  updated_at              DateTime?            @default(now()) @db.Timestamp(6)
  device_registrations_id Int
  device_registrations    device_registrations @relation(fields: [device_registrations_id], references: [device_registrations_id], onDelete: NoAction, onUpdate: NoAction)
}

model farm_plots {
  farm_plots_id        Int                    @id @default(autoincrement())
  farm_id              Int
  plot_name            String                 @db.VarChar(255)
  created_at           DateTime?              @default(now()) @db.Timestamp(6)
  agriculture_info     agriculture_info[]
  device_registrations device_registrations[]
  farms                farms                  @relation(fields: [farm_id], references: [farm_id], onDelete: Cascade, onUpdate: NoAction)

  @@index([farm_id], map: "idx_farm_plots_farm")
}

model farms {
  farm_id    Int          @id @default(autoincrement())
  farm_name  String       @db.VarChar(255)
  user_id    Int
  created_at DateTime?    @default(now()) @db.Timestamp(6)
  farm_plots farm_plots[]
  account    account      @relation(fields: [user_id], references: [account_id], onDelete: Cascade, onUpdate: NoAction)

  @@index([user_id], map: "idx_farms_user")
}
